@model IEnumerable<serverSide.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Units)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrerequisiteFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrerequisiteTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Units)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrerequisiteFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrerequisiteTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.InstructorId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
